! xterm ----------------------------------------------------------------------

!xterm*geometry:           80x25
! xterm*faceName:           xft:Consolas:Bold:Italic:pixelsize=14:antialias=true
!xterm*faceName: xft:droid sans mono:pixelsize-12:antialias=true
!xterm*dynamicColors:      true
!xterm*utf8:               2
!xterm*eightBitInput:      true
!xterm*saveLines:          512
!xterm*scrollTtyKeypress:  true
!xterm*scrollTtyOutput:    false
!xterm*scrollBar:          true
!xterm*rightScrollBar:     true
!xterm*loginShell:         true
!xterm*jumpScroll:         true
!xterm*multiScroll:        true
!xterm*toolBar:            false
!xterm*background: #242424
!xterm*foreground: #ffffff

! urxvt ------------------------------------------------------------------------
!URxvt*foreground: #D7D0C7
!URxvt*background: #151515

URxvt*termName: rxvt-unicode
URxvt*borderColor:        #151515
URxvt*colorBD:            #ffffff
!URxvt*cursorColor:        #ff8939
!URxvt*cursorColor2:       #151515
URxvt*scrollBar: 	false
! Font
!URxvt*font: 		xft:consolas:pixelsize=12
!URxvt*boldFont:     xft:consolas:bold:pixelsize=12
URxvt*font:                 xft:Dejavu Sans Mono:regular:size=10
URxvt*imFont:               xft:Dejavu Sans Mono:regular:size=10
URxvt*boldFont:             xft:Dejavu Sans Mono:bold:size=10
URxvt*italicFont:           xft:Dejavu Sans Mono:italic:size=10
URxvt*boldItalicFont:       xft:Dejavu Sans Mono:bold:italic:size=10

URxvt*geometry: 	80x25
URxvt*title: 		Terminal
URxvt*iconName: 	rxvt-unicode-256color
! Cursor
URxvt*cursorBlink: 	false
! Input method using ibus
URxvt*inputMethod: 	ibus
URxvt*preeditType: 	OnTheSpot, None
! Clickable URLs
URxvt*perl-ext:      default,url-select,clipboard,keyboard-select

URxvt*keysym.M-u:    perl:url-select:select_next
URxvt*url-select.launcher:   firefox
URxvt*url-select.underline: true
URxvt*url-select.button: 1

! Using keyboard to select and copy text
URxvt*keysym.M-Escape: perl:keyboard-select:activate
URxvt*keysym.M-s: perl:keyboard-select:search

! clipboard
URxvt*keysym.M-c:   perl:clipboard:copy
URxvt*keysym.M-v:   perl:clipboard:paste
URxvt*keysym.M-C-v: perl:clipboard:paste_escaped
